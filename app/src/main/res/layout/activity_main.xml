<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".80"
            android:fillViewport="true">

            <TextView
                android:id="@+id/dataTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="end"
                android:text="0"
                android:textColor="#414141"
                android:textSize="50dp" />

        </ScrollView>

        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight=".20"
            android:gravity="end"
            android:textColor="#636363"
            android:textSize="25dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_weight=".10"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_mode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_baseline_dark_mode_24" />

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_outline_cancel_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:background="@drawable/topborder"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clearAll"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="C"
                android:textColor="#FF0000"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="7"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="4"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="1"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_00"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="00"
                android:textColor="#0066ff"
                android:textSize="25dp"
                app:cornerRadius="40dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clearAll2"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="AC"
                android:textColor="#FF0000"
                android:textSize="25dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="8"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="5"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="2"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="0"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_percent"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="%"
                android:textColor="#04c207"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="9"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="6"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="3"
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="."
                android:textColor="#0066ff"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_divide"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="÷"
                android:textColor="#04c207"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_multiply"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="×"
                android:textColor="#04c207"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="+"
                android:textColor="#04c207"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#d9e7fc"
                android:text="−"
                android:textColor="#04c207"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_equals"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:backgroundTint="#04c207"
                android:text="="
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="40dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>